<div class="container">
    <ul class="course">
        @foreach (var course in Model.UpcommingCourses)
        {
            <li class="row">
                @if (Model.ShowAction)
                {
                    <div class="date col-md-3">
                        <div class="day">
                            @course.DateTime.ToString("dd") /
                        </div>
                        <div class="month">
                            @course.DateTime.ToString("MM")
                        </div>
                    </div>
                    <div class="details col-md-9">
                        <div class="lecturer col-md-5">
                            <span class="text-primary">Lecturer:</span> @course.Lecturer.Name
                            @if (Model.ShowAction)
                            {
                                var userId = User.Identity.GetUserId();
                                ApplicationDbContext _dbContext = new ApplicationDbContext();
                                bool isFollowing = _dbContext.Followings.Any(f => f.FollowerId == userId && f.FolloweeId == course.LecturerId);
                                if (!(userId == course.LecturerId))
                                {
                                    if (!isFollowing)
                                    {
                                        <button class="btn btn-default btn-sm js-toggle-follow" data-user-id="@course.LecturerId">Follow</button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-success btn-info js-toggle-follow" data-user-id="@course.LecturerId">Following</button>
                                    }
                                }
                                else
                                {
                                    <span class="text-danger">(User-Admin)</span>
                                }

                            }
                        </div>
                        <div class="category col-md-7">
                            <div class="col-md-5">
                                <span class="text-primary">Course:</span> @course.Category.Name
                            </div>
                            <div class="col-md-7">
                                @if (Model.ShowAction)
                                {
                                    var userId = User.Identity.GetUserId();
                                    ApplicationDbContext _dbContext = new ApplicationDbContext();
                                    bool isGoing = _dbContext.Attendances.Any(a => a.AttendeeId == userId && a.CourseId == course.Id);
                                    if (!isGoing)
                                    {
                                        <button data-course-id="@course.Id" id="btnAttend" class="btn btn-default btn-sm js-toggle-attendance">Going?</button>
                                    }
                                    else
                                    {
                                        <button data-course-id="@course.Id" id="btnAttend" class="btn btn-success btn-sm js-toggle-attendance">Going</button>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="date col-md-4">
                        <div class="day">
                            @course.DateTime.ToString("dd") /
                        </div>
                        <div class="month">
                            @course.DateTime.ToString("MM")
                        </div>
                    </div>
                    <div class="details col-md-8">
                        <div class="lecturer col-md-4">
                            <span class="text-primary">Lecturer:</span> @course.Lecturer.Name
                        </div>
                        <div class="category col-md-8">
                            <span class="text-primary">Course:</span> @course.Category.Name
                        </div>
                    </div>
                }
            </li>
            <hr />
        }
    </ul>
    @section scripts
    {
        <script>
            $(document).ready(function () {
                $(".js-toggle-attendance").click(function (e) {
                    var button = $(e.target);
                    $.post("/api/attendances", { courseId: button.attr("data-course-id") })
                        .done(function () {
                            button
                                .removeClass("btn-default")
                                .addClass("btn-success")
                                .text("Going");
                        })
                        .fail(function () {
                            alert('The Attendace already exists!');
                        });
                });
                $(".js-toggle-follow").click(function (e) {
                    var button = $(e.target);
                    $.post("/api/followings", { followeeId: button.attr("data-user-id") })
                        .done(function () {
                            button
                                .removeClass("btn-default")
                                .addClass("btn-info")
                                .text("Following");
                            location.reload();
                        })
                        .fail(function () {
                            alert('Lecturer had been following!');
                        });
                });
            });
